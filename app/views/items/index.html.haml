%p#notice= notice
%h1 Items
%table
  %thead
    %tr
      %th Label
      %th Important
      %th Done
      %th{:colspan => "3"}
  %tbody
    - @items.each do |item|
      %tr
        %td= item.label
        %td= item.important
        %td= item.done
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Item', new_item_path
%hr/
= link_to 'Root', root_path
